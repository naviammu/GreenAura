<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    android:layout_marginHorizontal="8dp"
    android:elevation="4dp"
    android:padding="12dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Address Text -->
        <TextView
            android:id="@+id/textViewAddress"
            android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Full address here"
        android:textSize="16sp"
        android:paddingBottom="8dp"
            android:padding="8dp"
        android:textColor="@color/black"
        android:maxLines="5"
        android:ellipsize="end"
        android:lineSpacingExtra="4dp" />  <!-- Extra line spacing for readability -->

        <!-- Deliver Here button (visible initially) -->
        <Button
            android:id="@+id/buttonDeliverHere"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Deliver Here"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/green" />

        <!-- Change Address button (hidden initially) -->
        <Button
            android:id="@+id/buttonChangeAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change Address"
            android:layout_marginLeft="10dp"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/green"
            android:visibility="gone" /> <!-- This can be changed dynamically in your code -->
    </LinearLayout>
</androidx.cardview.widget.CardView>
